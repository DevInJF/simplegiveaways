<div class="facebook_page_preview">
  <div class="image">
    <a class="avatar" href="{{path}}">
      <img alt="{{name}}" src="{{avatar_square}}" height="100" width="100">
    </a>
  </div>
  <div class="title">
    <h1><a href="{{path}}">{{name}}</a></h1>
    <h2>
      {{likes}}
      <span class="gray">Likes</span>
    </h2>
  </div>
  <div class="buttons">
    <a class="btn btn-large btn-edit" href="{{path}}">
      <i class="icon-flag"></i>
      Manage Page
    </a>
  </div>
</div>