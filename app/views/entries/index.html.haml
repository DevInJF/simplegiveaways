- content_for :content do

  = render 'giveaways/header', giveaway: @giveaway, page: @page

  .ui.segment
    = status_label(@giveaway)

    .active-giveaway.ui.grid
      .clearfix

      .sixteen.wide.column
        %h3.ui.header Entries
        = render 'giveaways/active/entries', giveaway: @giveaway, page: @page, entries: @entries
