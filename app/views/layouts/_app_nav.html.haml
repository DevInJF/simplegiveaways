.navbar
  .navbar-inner
    .container
      = link_to APPLICATION_NAME, root_path, :class => "brand"
      - if signed_in?
        %ul.nav.pull-right
          %li.dropdown
            %a{ :href => "#", :class => "dropdown-toggle", :"data-toggle" => "dropdown" } 
              %i.icon-user.icon-white
              Account 
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Settings", "#"
              %li.divider
              %li
                = link_to "Log Out", "#"
        %ul.nav.pull-right
          %li.dropdown
            %a{ :href => "#", :class => "dropdown-toggle", :"data-toggle" => "dropdown" } 
              %i.icon-flag.icon-white
              Facebook Pages 
              %b.caret
            %ul.dropdown-menu
              = render :partial => "facebook_pages/current_user_facebook_pages", :collection => current_user.facebook_pages, :as => :page
      - else
        %ul.nav.pull-right
          %li.dropdown
            = link_to "Log In", "/auth/facebook"