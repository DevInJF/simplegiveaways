%section.w-f.scrollable
  .slim-scroll{"data-color" => "#333333", "data-disable-fade-out" => "true", "data-distance" => "0", "data-height" => "auto", "data-size" => "5px"}
    %nav.nav-primary.hidden-xs
      %ul.nav
        = active_link_to dashboard_path, wrap_tag: :li do
          %i.fa.fa-dashboard.icon
            %b.bg-danger
          %span.hidden-nav-xs Dashboard
          %span.hidden-nav Home
        %li{class: %w(facebook_pages giveaways).include?(controller.controller_name) ? 'active' : ''}
          %a{href: "#pages", class: %w(facebook_pages giveaways).include?(controller.controller_name) ? 'active' : ''}
            %i.fa.fa-facebook-square.icon
              %b.bg-info
            %span.pull-right
              %i.fa.fa-angle-down.text
              %i.fa.fa-angle-up.text-active
            %span Pages
          %ul.nav.lt
            - current_user.facebook_pages.each do |page|
              - if page == @page
                %li.active
                  %a.active{href: "##{page.slug}"}
                    %i.fa.fa-angle-down.text
                    %i.fa.fa-angle-up.text-active
                    %span= page.name
                  %ul.nav.bg
                    = active_link_to active_facebook_page_giveaways_path(page), wrap_tag: :li do
                      %i.fa.fa-angle-right
                      %span Active Giveaway
                    = active_link_to pending_facebook_page_giveaways_path(page), wrap_tag: :li do
                      %i.fa.fa-angle-right
                      %span Pending Giveaways
                    = active_link_to completed_facebook_page_giveaways_path(page), wrap_tag: :li do
                      %i.fa.fa-angle-right
                      %span Completed Giveaways
                    = active_link_to new_facebook_page_giveaway_path(page), wrap_tag: :li do
                      %i.fa.fa-angle-right
                      %span New Giveaway
              - else
                = active_link_to facebook_page_path(page), wrap_tag: :li do
                  %i.fa.fa-angle-right
                  %span= page.name
        %li
          %a{href: "#account"}
            %i.fa.fa-user.icon
              %b.bg-primary
            %span.pull-right
              %i.fa.fa-angle-down.text
              %i.fa.fa-angle-up.text-active
            %span Account
          %ul.nav.lt
            = active_link_to edit_user_path(current_user, anchor: 'basic_info'), wrap_tag: :li do
              %i.fa.fa-angle-right
              %span Basic Info
            = active_link_to edit_user_path(current_user, anchor: 'billing_info'), wrap_tag: :li do
              %i.fa.fa-angle-right
              %span Billing Info
            = active_link_to user_subscription_plans_path(current_user), wrap_tag: :li do
              %i.fa.fa-angle-right
              %span Subscription
        %li
          %a{href: "#help"}
            %i.fa.fa-question-circle.icon
              %b.bg-success
            %span.pull-right
              %i.fa.fa-angle-down.text
              %i.fa.fa-angle-up.text-active
            %span Help
          %ul.nav.lt
            = active_link_to "#faq", wrap_tag: :li do
              %i.fa.fa-angle-right
              %span FAQ
            = active_link_to "#examples", wrap_tag: :li do
              %i.fa.fa-angle-right
              %span Examples
            = active_link_to "#contact", wrap_tag: :li do
              %i.fa.fa-angle-right
              %span Contact
