!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "224405887571151", property: "fb:app_id"}

    %title Simple Giveaways

    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{content: "Easily create, deploy, and manage giveaways on your Facebook pages.", name: "description"}
    %meta{content: "Harris Novick", name: "author"}

    = google_analytics_tracking_javascript

    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    /[if lte IE 8]
      = javascript_include_tag "http://explorercanvas.googlecode.com/svn/trunk/excanvas.js"
      = stylesheet_link_tag  "application-ie"

    = stylesheet_link_tag    "welcome"
    = javascript_include_tag "application"

    = csrf_meta_tags
  %body.welcome
    = render "shared/init_globals"
    #fb-root.logged-out
    = render "shared/flash", flash: flash

    .container-narrow
      = yield

    %noscript= utm_tag
