!!!
%html
  %head
    %meta{charset: "utf-8"}
    %title Simple Giveaways

    = google_analytics_tracking_javascript

    %meta{content: "", name: "description"}

    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    /[if lte IE 8]
      = javascript_include_tag "http://explorercanvas.googlecode.com/svn/trunk/excanvas.js"
      = stylesheet_link_tag  "jquery-ui-bootstrap/jquery.ui.1.8.16.ie.css"

    = stylesheet_link_tag    "welcome"
    = javascript_include_tag "application"

    = csrf_meta_tags
  %body.welcome
    = render "shared/init_globals"
    #fb-root.logged-out
    = render "shared/flash", flash: flash
    .facebook
      .paper
        .left
          %h1 Simple Giveaways
          %h2 Easily Create, Deploy, and Manage Giveaways for your Facebook Pages
        .right
          = yield

    %noscript= utm_tag
