!!!
%html
  %head
    %meta{charset: "utf-8"}
    %title Simple Giveaways

    = google_analytics_tracking_javascript

    %meta{content: "", name: "description"}

    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    /[if lte IE 8]
      = javascript_include_tag "http://explorercanvas.googlecode.com/svn/trunk/excanvas.js"
      = stylesheet_link_tag  "jquery-ui-bootstrap/jquery.ui.1.8.16.ie.css"

    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"

    = csrf_meta_tags

  %body.application{ class: body_class }

    = render "shared/init_globals"

    #fb-root.logged-in{ :'data-uid' => uid_class }

    .site_wrapper
      = render "layouts/header", user_pages: @user_pages
      = render "layouts/page_header"
      = render "layouts/sidebar", page: @page, giveaway: @giveaway, user: @user
      = render "layouts/content"
      = render "layouts/footer"

    %noscript= utm_tag