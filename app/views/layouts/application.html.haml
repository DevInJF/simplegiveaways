!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "224405887571151", property: "fb:app_id"}
    %title Simple Giveaways

    = google_analytics_tracking_javascript

    %meta{content: "", name: "description"}

    = javascript_include_tag "http://node.simplegiveaways.com/application.js"

    /[if lt IE 9]
      = javascript_include_tag "//html5shim.googlecode.com/svn/trunk/html5.js"

    /[if lte IE 8]
      = javascript_include_tag "//explorercanvas.googlecode.com/svn/trunk/excanvas.js"
      = stylesheet_link_tag  "application-ie"

    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"

    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700"

    = csrf_meta_tags

  %body.application{ class: body_class }

    = render "shared/init_globals"

    #fb-root.logged-in{ :'data-uid' => uid_class }

    .ui.page.grid
      .column
        = render 'layouts/header'
        = render 'layouts/page'


    %noscript= utm_tag
