%header.primary
  - if signed_in?
    %h1= link_to APPLICATION_NAME, user_path(current_user), :class => "brand"
  - else
    %h1= link_to APPLICATION_NAME, root_path, :class => "brand"
  .btn-group
    = link_to "Account", "#", :class => "btn btn-large mypages"
    %a{:href => "#", :class => "btn btn-large dropdown-toggle", :"data-toggle" => "dropdown"}
      %span.caret
    %ul.dropdown-menu
      %li Hello
      %li Hello 2
      %li Hello 3
  .btn-group
    = link_to "My Pages", "#", :class => "btn btn-large mypages"
    %a{:href => "#", :class => "btn btn-large dropdown-toggle", :"data-toggle" => "dropdown"}
      %span.caret
    %ul.dropdown-menu
      - current_user.facebook_pages.each do |page|
        %li= page.name
