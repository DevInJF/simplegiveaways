<h3>Facebook Pages</h3>
<% @user.facebook_pages.each do |page| %>
	<ul>
		<li class="clearfix">
			<%= image_tag page.avatar, :class => "thumb" rescue nil %>
			<span class="name"><%= link_to page.name, page.url rescue nil %></span>
			<span class="likes"><%= page.likes rescue nil %></span>
			<span class="category"><%= page.category rescue nil %></span>
		</li>
	</ul>
<% end %>