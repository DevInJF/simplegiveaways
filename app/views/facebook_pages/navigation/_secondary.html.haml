.ui.secondary.fluid.vertical.pointing.menu
  .item{ class: "#{active_link_to_class(new_facebook_page_giveaway_path(facebook_page))}" }
    = link_to '<i class="add sign icon"></i>New Giveaway'.html_safe, new_facebook_page_giveaway_path(facebook_page), class: 'ui tiny fluid labeled teal button'
  - unless facebook_page.no_active_giveaways?
    = active_link_to '<i class="bolt icon"></i>Active Giveaway'.html_safe, active_facebook_page_giveaways_path(facebook_page), class: 'item'
  - unless facebook_page.no_pending_giveaways?
    = active_link_to '<i class="time icon"></i>Pending Giveaways'.html_safe, pending_facebook_page_giveaways_path(facebook_page), class: 'item'
  - unless facebook_page.no_completed_giveaways?
    = active_link_to '<i class="archive icon"></i>Completed Giveaways'.html_safe, completed_facebook_page_giveaways_path(facebook_page), class: 'item'
