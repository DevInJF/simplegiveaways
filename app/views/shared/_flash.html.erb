<% flash.each do |name, msg| %>
  <div class="flash <%= name %>">
    <h3><%= name.upcase %></h3>
    <p><%= msg %></p>
  </div>
<% end %>

<%= javascript_tag do %>
  $(function(){
    $('.flash').delay(100).animate({
      marginTop: '0'
    }, 1000, function() {
      $(this).delay(2200).animate({
        marginTop: '-69px'
      }, 1000, function() {
        // Animation complete
      });
    });
  });
<% end %>