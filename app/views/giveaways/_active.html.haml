- if giveaway.present?

  .countdown.pull-right
    .btn-group.btn-end.pull-right
      = link_to "<i class='icon-remove icon-white'></i> End <b class='caret'></b>".html_safe, "#", :class => "btn btn-danger dropdown-toggle", :"data-toggle" => "dropdown"
      %ul.dropdown-menu
        %li= link_to "<i class='icon-time'></i> Edit End Time".html_safe, "#"
        %li.divider
        %li= link_to "<i class='icon-remove'></i> End Now".html_safe, end_giveaway_path(giveaway)
    %h3.countdown-timer.pull-right Giveaway Ends in 23:34:34:34

  %header.giveaway_preview
    .image= image_tag(giveaway.feed_image(:feed))
    .title
      %h1= link_to giveaway.title, giveaway_path(giveaway)
      %h2
        %span.gray Prize
        = giveaway.prize
    .buttons= link_to "<i class='icon-edit'></i> Edit".html_safe, end_giveaway_path(giveaway), :class => "btn btn-large btn-edit"

  %section.stats
    .row
      %ul.stat-box.span3
        %li.primary.views
          %h2.stat-label
            Views
            %span.pop.views ?
          %h3.stat-value= giveaway.impressionist_count
        %li.secondary.unique_views
          %h2.stat-label
            Unique Views
            %span.pop.unique_views ?
          %h3.stat-value= giveaway.impressionist_count(:filter => :session_hash)
        %li.secondary.viral_views
          %h2.stat-label
            Viral Views
            %span.pop.viral_views ?
          %h3.stat-value 6,118
      %ul.stat-box.span3
        %li.primary.likes
          %h2.stat-label
            Likes
            %span.pop.likes ?
          %h3.stat-value 0
        %li.secondary.likes_from_entries
          %h2.stat-label
            Likes From Entries
            %span.pop.likes_from_entries ?
          %h3.stat-value 14,120
        %li.secondary.viral_likes
          %h2.stat-label
            Viral Likes
            %span.pop.viral_likes ?
          %h3.stat-value 4,345
      %ul.stat-box.span3
        %li.primary.entries
          %h2.stat-label
            Entries
            %span.pop.entries ?
          %h3.stat-value= giveaway.entries.count
        %li.secondary.entry_rate
          %h2.stat-label
            Entry Rate
            %span.pop.entry_rate ?
          %h3.stat-value 48%
        %li.secondary.viral_entries
          %h2.stat-label
            Viral Entries
            %span.pop.viral_entries ?
          %h3.stat-value= giveaway.total_conversions
      %ul.stat-box.span3
        %li.primary.shares
          %h2.stat-label
            Shares
            %span.pop.shares ?
          %h3.stat-value= giveaway.total_shares
        %li.secondary.wall_posts
          %h2.stat-label
            Wall Posts
            %span.pop.wall_posts ?
          %h3.stat-value 1,841
        %li.secondary.requests
          %h2.stat-label
            Requests
            %span.pop.requests ?
          %h3.stat-value= giveaway.total_requests
  %section.entries
    %h2.pull-left Entries
    %a{:class => "btn pull-right"}
      %i.icon-download-alt
      Download .CSV
    .clearfix
    %table#entries.table.table-bordered
      %thead
        %tr
          %th.header Name
          %th.header Email
          %th.header Shares
          %th.header Requests
          %th.header Conversions
          %th.header Entry Time
      %tbody= render :collection => giveaway.entries, :partial => "giveaways/entry", :as => :entry


  :javascript
    $(function() {
      $(".pop.views").popover({"title": "Total Views", "content": "The number of impressions the giveaway has recieved."});
      $(".pop.unique_views").popover({"title": "Unique Views", "content": "The number of people who have viewed the giveaway."});
      $(".pop.viral_views").popover({"title": "Viral Views", "content": "The number of impressions generated by Wall Posts and Requests from entrants who shared the giveaway."});
      $(".pop.viral_views").popover({"title": "Viral Views", "content": "The number of impressions generated by Wall Posts and Requests from entrants who shared the giveaway."});
      $(".pop.likes").popover({"title": "Likes", "content": "The total number of likes added to your page since the giveaway has gone live. This includes likes not specifically generated by people entering the giveaway. This stat is included because often people will like your page without wanting to grant access to the giveaway app"});
      $(".pop.likes_from_entries").popover({"title": "Likes From Entries", "content": "The number of likes added to your page from people entering the giveaway."});
      $(".pop.viral_likes").popover({"title": "Viral Likes", "content": "The number of likes added to your pages from social sharing (Wall Posts and Requests)"});
      $(".pop.entries").popover({"title": "Entries", "content": "The number of people entered to win the giveaway"});
      $(".pop.entry_rate").popover({"title": "Entry Rate", "content": "The percentage of vistors who have entered the giveaway."});
      $(".pop.viral_entries").popover({"title": "Viral Entries", "content": "Number of entries from social sharing."});
      $(".pop.shares").popover({"title": "Shares", "content": "The total number of share actions taken by entrants"});
      $(".pop.wall_posts").popover({"title": "Wall Posts", "content": "Number of entrants who have posted the giveaway on their wall"});
      $(".pop.requests").popover({"title": "Requests", "content": "Number of Requests sent by entrants to their friends. A Request is like a message sent...."});
    });

- else

  %section.no_active
    .create-giveaway
      %h1 There is no active giveaway on your page right now.
      = link_to "Create a New Giveaway", new_facebook_page_giveaway_path(@page), :class => "btn btn-success btn-xlarge"

