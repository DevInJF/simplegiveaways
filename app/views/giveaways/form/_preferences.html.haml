= f.input :email_required, as: :boolean, wrapper: :inline_checkbox, label: 'Email Required for Entry?' do
  = f.input_field :email_required, as: :boolean, boolean_style: :inline, checked: true
  %span

= f.input :autoshow_share_dialog, as: :boolean, wrapper: :inline_checkbox, label: 'Autoshow Share Dialog?' do
  = f.input_field :autoshow_share_dialog, as: :boolean, boolean_style: :inline
  %span

= f.input :allow_multi_entries, as: :boolean, wrapper: :inline_checkbox, label: 'Multiple Entries Per User?' do
  = f.input_field :allow_multi_entries, as: :boolean, boolean_style: :inline
  %span

- if f.object.facebook_page.canhaz_referral_tracking? || f.object.allow_multi_entries == "1"

  = f.input :bonus_value, as: :string, input_html: { value: '5', placeholder: 'Bonus Entry Value', 'data-trigger' => 'change', 'data-required' => 'true' }, label: 'Bonus Entry Value'

- else

  = f.input :bonus_value, as: :string, input_html: { value: '', placeholder: 'Bonus Entry Value' }, label: 'Bonus Entry Value', wrapper_html: { style: 'display:none', id: 'bonus_value_wrapper' }
