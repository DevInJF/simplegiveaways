.form-group.row

  .col-sm-6
    %section.giveaway-image.panel.panel-default.image-panel
      .panel-heading.clearfix
        %h3.panel-title.pull-left Giveaway Image
      .panel-body
        = f.input :image, as: :file, label: false, input_html: { class: 'filestyle', 'data-trigger' => 'change', 'data-required' => "#{!f.object.image.present?}", 'data-classbutton' => 'btn btn-default', 'data-classinput' => 'form-control inline input-s', 'data-icon' => 'false' }
        - if f.object.image.present?
          .ui.image.m-b= image_tag f.object.image(:medium), alt: f.object.title

  .col-sm-6
    %section.feed-image.panel.panel-default.image-panel
      .panel-heading.clearfix
        %h3.panel-title.pull-left Feed Image
      .panel-body
        = f.input :feed_image, as: :file, label: false, input_html: { class: 'filestyle', 'data-trigger' => 'change', 'data-required' => "#{!f.object.feed_image.present?}", 'data-classbutton' => 'btn btn-default', 'data-classinput' => 'form-control inline input-s', 'data-icon' => 'false' }
        - if f.object.feed_image.present?
          .ui.image= image_tag f.object.feed_image(:thumb), alt: f.object.title
