.item.giveaway
  = link_to '', facebook_page_giveaway_path(giveaway.facebook_page, giveaway), class: 'ui circular image masked-avatar', style: "background-image: url('#{giveaway.image(:medium)}');"
  .content.meta
    = link_to giveaway.title, facebook_page_giveaway_path(giveaway.facebook_page, giveaway), class: 'header'
    %small #{giveaway.status}
  .content.stats
    - if giveaway.completed?
      .ui.grid
        .statistic.five.wide.column
          .number= giveaway.entry_count
          .description Entries
        .statistic.five.wide.column
          .number= giveaway.page_likes_while_active
          .description Likes
        .statistic.five.wide.column
          .number= giveaway.total_shares
          .description Shares
    - else
      = render 'giveaways/navigation/primary', giveaway: giveaway


