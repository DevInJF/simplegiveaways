.ui.small.modal
  %i.close.icon
  .header
    Start Giveaway
  .content
    .ui.stackable.grid
      .row.aligned.center
        .sixteen.wide.column
          .ui.circular.image.masked-avatar.facebook-page{ style: "background-image: url('#{giveaway.facebook_page.avatar_large}');" }
          .ui.circular.image.masked-avatar.giveaway{ style: "background-image: url('#{giveaway.image(:medium)}');" }
      .row
        .sixteen.wide.column
          = render 'giveaways/form/publish_confirm', giveaway: giveaway
  .actions
    .ui.two.fluid.buttons
      .ui.labeled.icon.deny.button
        %i.remove.icon
        Cancel
      .ui.teal.right.labeled.icon.approve.button
        Next
        %i.right.arrow.icon
