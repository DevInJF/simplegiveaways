.ui.small.modal.start-giveaway
  %i.close.icon
  .header
    Start Giveaway
  .content
    = render 'giveaways/pending/step_one', giveaway: giveaway, facebook_page: giveaway.facebook_page
    = render 'giveaways/pending/step_two', giveaway: giveaway, facebook_page: giveaway.facebook_page
    = render 'giveaways/pending/step_three', giveaway: giveaway, facebook_page: giveaway.facebook_page

  .actions
    .ui.fluid.buttons{ class: giveaway.facebook_page.no_active_giveaways? ? 'two' : 'one' }
      .ui.labeled.icon.deny.button
        %i.remove.icon
        Cancel
      - if giveaway.facebook_page.no_active_giveaways?
        .ui.teal.right.labeled.icon.approve.button
          Next
          %i.right.arrow.icon
