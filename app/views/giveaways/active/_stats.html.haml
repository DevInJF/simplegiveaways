.giveaway-stats.four.column.center.aligned.equal.height.row
  .column
    .ui.stacked.segment
      .ui.statistic.impressions
        .number= giveaway.views
        .description Impressions
      .ui.statistic.unique-visitors
        .number= giveaway.uniques
        .description Unique Visitors
      .ui.statistic.viral-impressions
        .number= giveaway.viral_views
        .description Viral Impressions
  .column
    .ui.stacked.segment
      .ui.statistic.net-likes
        .number= giveaway.page_likes_while_active
        .description Net Likes
      .ui.statistic.likes-from-entries
        .number= giveaway.likes_from_entries_count
        .description Likes From Entries
      .ui.statistic.viral-likes
        .number= giveaway.viral_like_count
        .description Viral Likes
  .column
    .ui.stacked.segment
      .ui.statistic.entries
        .number= giveaway.entry_count
        .description Entries
      .ui.statistic.entry-rate
        .number= giveaway.entry_rate
        .description Entry Rate
      .ui.statistic.viral-entries
        .number= giveaway.viral_entry_count
        .description Viral Entries
  .column
    .ui.stacked.segment
      .ui.statistic.shares
        .number= giveaway.total_shares
        .description Shares
      .ui.statistic.wall-posts
        .number= giveaway.total_wall_posts
        .description Wall Posts
      .ui.statistic.requests
        .number= giveaway.total_requests
        .description Requests

:javascript
  $(function() {
    $(".statistic.impressions").popup({"title": "Impressions", "content": "The total number of views the giveaway has recieved."});
    $(".statistic.unique-visitors").popup({"title": "Unique Visitors", "content": "The total number of people who have viewed the giveaway."});
    $(".statistic.viral-impressions").popup({"title": "Viral Impressions", "content": "The total number of impressions generated by Wall Posts, Sends, and Requests from entrants who shared the giveaway."});
    $(".statistic.net-likes").popup({"title": "Net Likes", "content": "The total number of likes added to your page since the giveaway has gone live."});
    $(".statistic.likes-from-entries").popup({"title": "Likes From Entries", "content": "The total number of likes added to your page from people who successfully entered the giveaway."});
    $(".statistic.viral-likes").popup({"title": "Viral Likes", "content": "The total number of likes added to your page from visitors referred by Wall Posts, Sends, and Requests."});
    $(".statistic.entries").popup({"title": "Entries", "content": "The total number of people who successfully entered the giveaway."});
    $(".statistic.entry-rate").popup({"title": "Entry Rate", "content": "The percentage of vistors who successfully entered the giveaway."});
    $(".statistic.viral-entries").popup({"title": "Viral Entries", "content": "The total number of entries from visitors referred by Wall Posts, Sends, and Requests."});
    $(".statistic.shares").popup({"title": "Shares", "content": "The total number of share actions (Wall Posts, Sends, and Requests) taken by visitors and entrants."});
    $(".statistic.wall-posts").popup({"title": "Wall Posts", "content": "The total number of Wall Posts generated by visitors and entrants."});
    $(".statistic.requests").popup({"title": "Requests", "content": "The total number of Requests generated by visitors and entrants."});
  });
