.center.aligned.equal.height.row
  .four.wide.column
    .ui.stacked.segment
      .ui.black.circular.label= giveaway.views
      %h5.ui.header Impressions
      .ui.black.circular.label= giveaway.uniques
      %h5.ui.header Unique Visitors
      .ui.black.circular.label= giveaway.viral_views
      %h5.ui.header Viral Impressions
  .four.wide.column
    .ui.stacked.segment
      .ui.black.circular.label= giveaway.page_likes_while_active
      %h5.ui.header Net Likes
      .ui.black.circular.label= giveaway.likes_from_entries_count
      %h5.ui.header Likes From Entries
      .ui.black.circular.label= giveaway.viral_like_count
      %h5.ui.header Viral Likes
  .four.wide.column
    .ui.stacked.segment
      .ui.black.circular.label= giveaway.entry_count
      %h5.ui.header Entries
      .ui.black.circular.label= giveaway.entry_rate
      %h5.ui.header Entry Rate
      .ui.black.circular.label= giveaway.viral_entry_count
      %h5.ui.header Viral Entries
  .four.wide.column
    .ui.stacked.segment
      .ui.black.circular.label= giveaway.total_shares
      %h5.ui.header Shares
      .ui.black.circular.label= giveaway.total_wall_posts
      %h5.ui.header Wall Posts
      .ui.black.circular.label= giveaway.total_requests
      %h5.ui.header Requests

:javascript
$(function() {
  $(".pop.views").popover({"title": "Total Views", "content": "The number of impressions the giveaway has recieved."});
  $(".pop.unique_views").popover({"title": "Unique Views", "content": "The number of people who have viewed the giveaway."});
  $(".pop.viral_views").popover({"title": "Viral Views", "content": "The number of impressions generated by Wall Posts and Requests from entrants who shared the giveaway."});
  $(".pop.viral_views").popover({"title": "Viral Views", "content": "The number of impressions generated by Wall Posts and Requests from entrants who shared the giveaway."});
  $(".pop.likes").popover({"title": "Net Likes", "content": "The total number of likes added to your page since the giveaway has gone live. This includes likes not specifically generated by people entering the giveaway. This stat is included because sometimes people will like your page without completing their giveaway"});
  $(".pop.likes_from_entries").popover({"title": "Likes From Entries", "content": "The number of likes added to your page from people entering the giveaway."});
  $(".pop.viral_likes").popover({"title": "Viral Likes", "content": "The number of likes added to your pages from social sharing (Wall Posts and Requests)"});
  $(".pop.entries").popover({"title": "Entries", "content": "The number of people entered to win the giveaway"});
  $(".pop.entry_rate").popover({"title": "Entry Rate", "content": "The percentage of vistors who have entered the giveaway."});
  $(".pop.viral_entries").popover({"title": "Viral Entries", "content": "Number of entries from social sharing."});
  $(".pop.shares").popover({"title": "Shares", "content": "The total number of share actions taken by entrants"});
  $(".pop.wall_posts").popover({"title": "Wall Posts", "content": "Number of entrants who have posted the giveaway on their wall"});
  $(".pop.requests").popover({"title": "Requests", "content": "Number of Requests sent by entrants to their friends. A Request is like a message sent...."});
});
