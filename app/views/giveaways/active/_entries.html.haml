- if entries

  .panel.panel-default.entries-panel
    .panel-body
      = link_to '<i class="fa fa-save m-r-sm"></i>Export Entries'.html_safe, export_entries_facebook_page_giveaway_path(page, giveaway), class: 'btn btn-sm btn-default', target: '_blank'
    .panel-body.table-responsive
      %table#entries_table.table.table-striped.m-b-none{"data-ride" => "datatables"}
        %thead
          %tr
            %th.header.first-child.th-sortable Name/Email
            %th.header.th-sortable Email
            - if giveaway.canhaz_referral_tracking?
              %th.header.th-sortable Viral?
            %th.header.th-sortable New Fan?
            %th.header.th-sortable Shares
            - if giveaway.canhaz_advanced_analytics?
              %th.header.th-sortable Wall Posts
              %th.header.th-sortable Requests
            - if giveaway.canhaz_referral_tracking?
              %th.header.th-sortable Conversions
            %th.header.th-sortable Bonus Entries
            %th.header.last-child.th-sortable Entry Time
        %tbody

