<%= semantic_form_for @giveaway do |f| %>

  <%= f.semantic_errors %>

	<%= f.inputs do %>
		<%= f.input :facebook_page, :value => current_user.facebook_pages %>
	  <%= f.input :title %>
	  <%= f.input :description %>
	  <%= f.input :start_date, :as => :date_picker %>
	  <%= f.input :end_date, :as => :date_picker %>
	  <%= f.input :content %>
		<%= f.input :user_id, :as => :hidden, :value => current_user.id %>
	<% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>

<%= javascript_tag do %>
	$(function(){
		$('input.ui-date-picker').datetimepicker({
			ampm: true
		});
	});
<% end %>