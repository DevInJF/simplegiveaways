<%= render "shared/error_messages", :target => @giveaway %>

<%= semantic_form_for [@page, @giveaway], :html => { :multipart => true } do |f| %>

	<%= f.inputs do %>
	  <%= f.input :title %>
	  <%= f.input :prize %>
	  <%= f.input :description %>
	  <%= f.input :start_date %>
	  <%= f.input :end_date %>
		<%= f.input :image, :as => :file %>
    <%= image_tag @giveaway.image.url(:thumb) %>
	  <%= f.input :feed_image, :as => :file %>
    <%= image_tag @giveaway.feed_image.url(:thumb) %>
	  <%= f.input :terms %>
	<% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>