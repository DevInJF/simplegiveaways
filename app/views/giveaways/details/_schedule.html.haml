%section.schedule.panel.panel-default
  .panel-heading
    %h3.panel-title Schedule
  %ul.list-group

    %li#giveaway_start_date.date-container.list-group-item{ 'data-date' => giveaway.start_date, 'data-date-type' => 'start' }
      .m-b-xs.editable-trigger
        Start Date
        %a.pull-right{href: "#"}
          %i.fa.fa-pencil
      = editable giveaway, :start_date, url: facebook_page_giveaway_path(giveaway.facebook_page, giveaway), value: giveaway.start_date, class: 'editable-datetime', 'date-type' => 'start'
      %input.date-trigger.hide{type: "text", value: "#{giveaway.start_date && giveaway.start_date.to_formatted_s(:date)}"}/
      %input.time-trigger.hide{type: "text", value: "#{giveaway.start_date && giveaway.start_date.to_formatted_s(:time)}"}/
      .pickadate-outlet
      - callout type: 'warning', title: "This start date conflicts with the following giveaway schedules.", class: 'conflicts-container m-t' do
        %p If you choose to keep this date, the current giveaway will not be automatically published.

    %li#giveaway_end_date.date-container.list-group-item{ 'data-date' => giveaway.end_date, 'data-date-type' => 'end' }
      .m-b-xs.editable-trigger
        End Date
        %a.pull-right{href: "#"}
          %i.fa.fa-pencil
      = editable giveaway, :end_date, url: facebook_page_giveaway_path(giveaway.facebook_page, giveaway), value: giveaway.end_date, class: 'editable-datetime', 'date-type' => 'end'
      %input.date-trigger.hide{type: "text", value: "#{giveaway.end_date && giveaway.end_date.to_formatted_s(:date)}"}/
      %input.time-trigger.hide{type: "text", value: "#{giveaway.end_date && giveaway.end_date.to_formatted_s(:time)}"}/
      .pickadate-outlet
      - callout type: 'warning', title: "This end date conflicts with the following giveaway schedules.", class: 'conflicts-container m-t' do
        %p If you choose to keep this date, the conflicting giveaways will not be automatically published.
