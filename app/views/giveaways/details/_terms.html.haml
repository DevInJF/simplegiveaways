%section.terms.panel.panel-default
  .panel-heading
    %h3.panel-title Terms &amp; Conditions
  %table.table.table-striped.m-b-none
    %thead
    %tbody
      %tr
        %td URL
        %td.val= editable giveaway, :terms_url, url: facebook_page_giveaway_path(giveaway.facebook_page, giveaway), type: 'textarea'
        %td.text-right
          .btn-group.editable-trigger
            %a{href: "#"}
              %i.fa.fa-pencil
      %tr
        %td Text
        %td.val
          %p= editable giveaway, :terms_text, url: facebook_page_giveaway_path(giveaway.facebook_page, giveaway), value: giveaway.terms_text, type: 'textarea', class: 'editable-readmore'
        %td.text-right
          .btn-group.editable-trigger
            %a{href: "#"}
              %i.fa.fa-pencil
