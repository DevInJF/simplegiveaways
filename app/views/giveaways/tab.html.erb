<div id="enter_giveaway">
  <a href="#">Enter Giveaway</a>
</div>
<div id="giveaway_image">
  <%= image_tag @giveaway.image.url %>
</div>

<div id="fb-root"></div>
<%= javascript_include_tag "http://connect.facebook.net/en_US/all.js" %>
<%= javascript_tag do %>
  FB.init({
    appId  : '224405887571151',
    status : true, // check login status
    cookie : true, // enable cookies to allow the server to access the session
    xfbml  : true  // parse XFBML
  });

  $(function(){
    $("#enter_giveaway a").click(function(e){
      e.preventDefault();
      FB.ui({
        method: 'oauth',
        client_id: '224405887571151',
        perms: 'email,user_location,user_birthday'
      }, function(){
        alert("hello");
      });
    });
  });
<% end %>