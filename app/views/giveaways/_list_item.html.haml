- if giveaway.status == "Active"
  
  %header.active
    .image= image_tag(giveaway.feed_image(:feed))
    %h1= truncate(giveaway.title, :length => 26)
    %p is #{giveaway.status}


- elsif giveaway.status == "Pending" 
  %header.giveaway_preview 
    .image
      = image_tag(giveaway.feed_image(:feed))
    .title
      %h1= link_to truncate(giveaway.title, :length => 26), facebook_page_giveaway_path(@page, giveaway)
      %h2
        %span.gray Prize
        = giveaway.prize
    .buttons
      = link_to "<i class='icon-edit'></i> Edit".html_safe, facebook_page_giveaway_path(@page, giveaway), :class => "btn btn-large btn-edit"
      - if @page.giveaways.active.empty?
        = link_to "<i class='icon-star icon-white'></i> Publish".html_safe, start_facebook_page_giveaway_path(@page, giveaway), :class => "btn btn-large btn-primary btn-publish"
      - else
        %span.btn.btn-large.btn-primary.btn-publish.disabled
          %i.icon-star.icon-white
          Publish



- else giveaway.status == "Completed"

  %tr
  %td= image_tag(giveaway.feed_image(:thumb))
  %td= link_to truncate(giveaway.title, :length => 26), facebook_page_giveaway_path(@page, giveaway)
  %td= giveaway.end_date
  %td= giveaway.entries.count
  %td= giveaway.impressionist_count
  %td
    .modal.hide.fade{ :id => "stats"+"#{giveaway.id}"+"modal" }
      .modal-header
        %a.close{ :"data-dismiss" => "modal"}
          x
        %h3 Stats for #{giveaway.title}
      .modal-body
        = render 'stats', :giveaway => giveaway
    %a{ :"data-toggle" => "modal", :class => "btn pull-right", :href => "#stats"+"#{giveaway.id}"+"modal" }
      %i.icon-signal
      View Stats
    .modal.hide.fade{ :id => "entries"+"#{giveaway.id}"+"modal" }
      .modal-header
        %a.close{ :"data-dismiss" => "modal"}
          x
        %h3 Entries for #{giveaway.title}
      .modal-body
        = render 'entries', :giveaway => giveaway
    %a{ :"data-toggle" => "modal", :class => "btn btn-primary pull-right", :href => "#entries"+"#{giveaway.id}"+"modal" }
      %i.icon-list.icon-white
      View Entries
