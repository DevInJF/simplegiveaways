#giveaway_details

  .row

    .col-lg-6.m-t-xs

      .btn-group.btn-group-relaxed.m-b
        #start_giveaway.btn.btn-lg.btn-primary.btn-left= '<i class="fa fa-bolt"></i>&nbsp;&nbsp;Start'.html_safe
        = link_to '<i class="fa fa-gear"></i>&nbsp;&nbsp;Edit'.html_safe, edit_facebook_page_giveaway_path(giveaway.facebook_page, giveaway), id: 'edit_giveaway', class: 'btn btn-lg btn-default btn-right'

      = render 'giveaways/details/basic_info', giveaway: giveaway

      = render 'giveaways/details/schedule', giveaway: giveaway

      = render 'giveaways/details/preferences', giveaway: giveaway

      = render 'giveaways/details/terms', giveaway: giveaway

    .col-lg-6.m-t-xs

      = render 'giveaways/details/giveaway_image', giveaway: giveaway

      = render 'giveaways/details/feed_image', giveaway: giveaway
