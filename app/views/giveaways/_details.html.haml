.ui.segment

  = status_label(giveaway)

  .ui.right.floated.small.buttons
    = link_to 'Edit', edit_facebook_page_giveaway_path(giveaway.facebook_page, giveaway), class: 'ui button'
    .or
    = link_to 'Start', start_facebook_page_giveaway_path(giveaway.facebook_page, giveaway), class: 'ui teal button'

  .ui.relaxed.stackable.grid

    .row
      .eight.wide.column

        = render 'giveaways/details/basic_info', giveaway: giveaway

      .eight.wide.column

        = render 'giveaways/details/schedule', giveaway: giveaway

        = render 'giveaways/details/terms', giveaway: giveaway

        = render 'giveaways/details/preferences', giveaway: giveaway

    .row
      .sixteen.wide.column

        = render 'giveaways/details/images', giveaway: giveaway
