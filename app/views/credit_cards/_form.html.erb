<%= semantic_form_for @credit_card do |f| %>

  <%= f.inputs do %>
    <%= f.input :number %>
    <%= f.input :month %>
    <%= f.input :year %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :verification_value %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>