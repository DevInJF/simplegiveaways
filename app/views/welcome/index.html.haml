.inner
  %h1= link_to image_tag('/assets/logo.png', alt: 'Simple Giveaways'), root_path

  #primary_content
    %a#sc-facebook-container-inPage.sc-facebook-container.sc-widget-container{href: '/auth/facebook'}
      .sc-widget-content Easily create, deploy, and manage giveaways on your Facebook pages.
      #sc-facebook-button-inPage.sc-widget-button
        .uibutton.large.facebook Sign In with Facebook
      .sc-widget-logo
      .sc-widget-bottom

  %footer= "&copy; #{Time.now.year} Switchrails".html_safe

:javascript
  $(function() {
    $('body').noisy({
      'intensity' : 0.061,
      'size' : '300',
      'opacity' : 0.08,
      'fallback' : '#DFE3E8',
      'monochrome' : false
    }).css('background-color', '#DFE3E8');
  });
